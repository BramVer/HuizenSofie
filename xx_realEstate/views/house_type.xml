<openerp>
    <data>

        <record model="ir.ui.view" id="xx_house_type_form">
            <field name="name">xx.house.type.form</field>
            <field name="model">xx.house.type</field>
            <field name="arch" type="xml">
                <form string="House type Form">
                    <sheet>
                        <separator string="Huistype"/>
                        <group>
                            <field name="name"/>
                            <field name="xx_attribute_types"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="xx_house_type_tree_view">
            <field name="name">xx.house.type.tree</field>
            <field name="model">xx.house.type</field>
            <field name="arch" type="xml">
                <tree string="House Type Tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>


    </data>
</openerp>