                           <t t-esc="ev.name"/>
                       </td>
                       <td class="col-sm-2">
                           <t t-if="ev.allday">
                               Hele dag
                           </t>
                           <t t-if="not ev.allday">
                            <t t-esc="ev.duration"/>
                           </t>
                       </td>
                       <td class="col-sm-2">
                           <t t-esc="ev.location"/>
                       </td>
                     </tr>
                       </t>

                             IF DATE UNTIL APP IS LESS THAN 0
                       <t t-if="c.date_delay &lt;= 0">
                     <tr class="danger">
